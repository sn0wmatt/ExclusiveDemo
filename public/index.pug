html(ng-app='progressBar')
	head
		title Progress Bar!
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
	body
		div(ng-controller='mainController')
			.progress
				.progress-bar.progress-bar-success.progress-bar-striped(role='progressbar', aria-valuenow='{{ progress }}', aria-valuemin='0', aria-valuemax='100', style='width: {{ progress }}%')
					| {{ progress }}
			input(type='button', ng-click='makeProgress()')
		script(src='/js/jquery.js')
		script(src='/js/bootstrap.js')
		script(src='/js/angular.js')
		script(src='/js/script.js')